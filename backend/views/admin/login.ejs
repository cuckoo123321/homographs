<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../template/head') %>
    <%- include('../../css/addUpdateStyle') %>
    <style>
        input{
            margin-top: 20px;
        }
        .submit_button {
            width: 100%;
            margin: 20px 0 0 0;
            letter-spacing: 10px;
        }
    </style>
</head>
<body>
    <%- include('../template/navbar') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2>系統管理員登入</h2>
                <% if(errorMessage && errorMessage.length > 0){ %>
                    <div class="alert alert-dismissible alert-danger">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong><%= errorMessage %></strong>
                    </div>
                <% } %>
                <form method="POST" action="/login" data-bitwarden-watching="1">
                    <div class="form-group list">
                        <input name="admin_name" type="text" class="form-control" placeholder="請輸入帳號" required="required">
                    </div>

                    <div class="form-group list">
                        <input name="admin_password" type="password" class="form-control" placeholder="請輸入管理員密碼" required="required">
                    </div>
                    <div class="form-group list">
                        <button type="submit" class="btn btn-primary submit_button" >登入</button>
                    </div>
                    
                </form>
            </div>
        <div class="col-md-3"></div>
    </div>
</div>
</body>
</html>



